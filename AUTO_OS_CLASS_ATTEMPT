#Network Testing
def network_chk():
    #Setup Sub-Functions
    def ping_google():
        import ping3
        response_time = ping3.ping('google.com')

        if response_time is not None:
            response_time = round(response_time, 5)
            logger.log_message('Ping Successful to Google.com. Response time: ' + str(response_time) + '\n')
        else:
            logger.log_message('Ping failed to Google.com.\n')

    #Create Network Header
    network_header = ("\t\t\t Network Information\n")
    logger.log_message(network_header)

    # gathering all network interfaces (virtual and physical) from the system
    if_addrs = psutil.net_if_addrs()

    #Print each interface name
    for interface_name, interface_addresses in if_addrs.items():
        interface=f'Interface : {interface_name}'
        logger.log_message(interface)

        #Print IP
        for address in interface_addresses:
            if str(address.family) == 'AddressFamily.AF_INET':
                ip=f'[+] IP Address: {address.address}'
                logger.log_message(ip + '\n')
    
    #Run Ping Command
    ping_google()
            
#Setup_SNAPD
def setup_snapd():
    try:
        subprocess.run(['sudo','systemctl','enable', '--now', 'snapd.socket'])
    except FileNotFoundError:
        pass        
    if os.error:
        print('Error occurred.')
    else:
        keyboard.press('enter')
        print('Snapd service started.')
    try:
        subprocess.run(['sudo','ln','-s', '/var/lib/snapd/snap', '/snap'])
    except FileNotFoundError:
        pass
    if os.error:
        print('Error occurred')
    else:
        keyboard.press_and_release('enter')
        print('Snapd service started')

#Ubuntu:
def os_chooser(operating_system):
    def ubuntu_test():
        log_cpu_info()
        log_memory_info()
        network_chk()
        ubuntu_package_installation()
        setup_snapd()
        linux_info_dumps()
        date_time_end()

    def windows_test():
        log_cpu_info()
        log_memory_info()
        network_chk()
        dxdiag()
        date_time_end()
    
    def rhel_test():
        log_cpu_info()
        log_memory_info()
        network_chk()
        rhel_package_installation()
        setup_snapd()
        linux_info_dumps()
        date_time_end()

    def open_suse_test():
        log_cpu_info()
        log_memory_info()
        network_chk()
        opensuse_package_installation()
        setup_snapd()
        linux_info_dumps()
        date_time_end()

    def centos_test():
        log_cpu_info()
        log_memory_info()
        network_chk()
        centos_package_installation()
        setup_snapd()
        linux_info_dumps()
        date_time_end()

    if operating_system == 'Linux':
        ubuntu_test()

    elif operating_system == 'Windows':
        windows_test()

    elif operating_system == 'CentOS':
        centos_test()

    elif operating_system == 'Red Hat Enterprise Linux':
        rhel_test()

    elif operating_system == 'OpenSUSE Leap':
        open_suse_test()


def os_input():
    while True:
        try:
            user_input=int(input('Which OS is currently under test?:\n1. Ubuntu\n2. Windows\n3. CentOS\n4. Red Hat Enterprise Linux\n5. OpenSUSE Leap\n Please select a number 1-5 and press \'Enter\': '))
            if 1 <= user_input <= 5:
                if user_input == 1:
                    logger.log_message('OS: Ubuntu\n')
                    return 'Linux'
                
                elif user_input == 2:
                    logger.log_message('OS: Windows\n')
                    return 'Windows'
                    
                elif user_input == 3:
                    logger.log_message('OS: CentOS\n')
                    return 'CentOS'
                    
                elif user_input == 4:
                    logger.log_message('OS: Red Hat Enterprise Linux\n')
                    return 'Red Hat Enterprise Linux'
                    
                elif user_input == 5:
                    logger.log_message('OS: OpenSUSE Leap\n')
                    return 'OpenSUSE Leap'
                    
            else:
                print('Invalid input! Please enter a number between 1 and 5.: ')
        except ValueError:
            print('Invalid input! Please enter a number between 1 and 5.: ')




def main():
    logger.log_break('----------------------------------------------------------------------------------------------')
    date_time_start()
    pip_installs()
    #Define functions PER OS:
    os_info()
    operating_system = os_input()
    os_chooser(operating_system)
    logger.log_break('----------------------------------------------------------------------------------------------')

#MAIN
if __name__ == '__main__':
    main()
